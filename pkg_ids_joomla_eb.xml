    <description>Pacote de instalação completo do IDS Joomla EB incluindo template, componentes e módulos</description>
    <version>1.0.0</version>

    <files folder="packages">
        <!-- Template -->
        <file type="template" id="govbr-ds">novpadraoegov.zip</file>
        
        <!-- Componentes -->
        <file type="component" id="com_aniversariantes">com_aniversariantes.zip</file>
        <file type="component" id="com_pagtesouro">com_pagtesouro.zip</file>
        
        <!-- Módulos -->
        <file type="module" id="mod_aniver" client="site">mod_aniver.zip</file>
        <file type="module" id="mod_imagempopup" client="site">mod_imagempopup.zip</file>
        <file type="module" id="mod_instafeed" client="site">mod_instafeed.zip</file>
        <file type="module" id="mod_links" client="site">mod_links.zip</file>
        <file type="module" id="mod_readmorenews" client="site">mod_readmorenews.zip</file>
        <file type="module" id="mod_videosiframe" client="site">mod_videosiframe.zip</file>
    </files>
    
    <updateservers>
        <server type="extension" priority="1" name="IDS Joomla EB Updates">https://raw.githubusercontent.com/astatonn/ids-joomla-eb/master/updates/ids-joomla-eb-updates.xml</server>
    </updateservers>
</extension>